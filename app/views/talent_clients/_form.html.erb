 <%= form_for(talent_client, html: { class: 'form-horizontal', multipart: true }) do |f| %>
  <div class="form-group">
    <label class="control-label col-sm-4" for="email">First Name:</label>
    <div class="col-sm-8">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Enter first name" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Last Name:</label>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Gender:</label>
    <div class="col-sm-8">
      <% TalentClient.genders.keys.each do |gender| %>
        <%= f.radio_button :gender, gender %>
        <%= f.label gender.to_sym %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Quote:</label>
    <div class="col-sm-8">
      <%= f.text_field :quote, class: "form-control", placeholder: "Enter quote" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Quoter:</label>
    <div class="col-sm-8">
      <%= f.text_field :quoter, class: "form-control", placeholder: "Enter quoter" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Select Talents:</label>
    <div class="col-sm-8">
      <%= f.select :talent_ids, Talent.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Bio:</label>
    <div class="col-sm-8">
      <%#= f.text_area :bio, class: "form-control", placeholder: "Enter bio..." %>
      <%= cktext_area :talent_client, :bio, :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'} %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4" for="pwd">Profile Image:</label>
    <div class="col-sm-8">
      <%= f.file_field :profile_image %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $('#talent_client_talent_ids').multiselect({
      includeSelectAllOption: true,
      enableCaseInsensitiveFiltering: true
    });
  });
</script>

   

